<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FinaActivity"
    android:background="#F7EBE8"
    app:tabMode="scrollable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp">

    <TextView
        android:id="@+id/titleAnaFina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_Anatab"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#1e1e24"
        android:justificationMode="inter_word"/>

    <TextView
        android:id="@+id/contentAnaFina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_Anatab"
        android:textColor="#1e1e24"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/receitaAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receita Bruta:"
        android:textSize="18sp"
        android:textColor="#1e1e24"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtReceitaAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1e1e24"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/CDAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custos e Despesas:"
        android:textSize="18sp"
        android:textColor="#1e1e24"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/txtCDAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1e1e24"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/IMCAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMC:"
        android:textSize="18sp"
        android:textColor="#1e1e24"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/txtIMCAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1e1e24"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/PontoAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ponto de Equilibrio:"
        android:textSize="18sp"
        android:textColor="#1e1e24"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtPontoAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1e1e24"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/DREAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lucro Líquido:"
        android:textSize="18sp"
        android:textColor="#1e1e24"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtDREAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1e1e24"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/LucraAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lucratividade:"
        android:textSize="18sp"
        android:textColor="#1e1e24"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtLucraAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1e1e24"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/MarOperAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Margem Operacional:"
        android:textSize="18sp"
        android:textColor="#1e1e24"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtMargOperAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1e1e24"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/MargLiqAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Margem Líquida:"
        android:textSize="18sp"
        android:textColor="#1e1e24"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtMargLiqAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1e1e24"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/PRIAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRI:"
        android:textSize="18sp"
        android:textColor="#1e1e24"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtPRIAnaFina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1e1e24"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>