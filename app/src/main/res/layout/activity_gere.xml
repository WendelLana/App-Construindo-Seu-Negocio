<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".GereActivity">

    <com.example.redelogin.CustomCalendarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_custom_calendar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <Button
        android:id="@+id/gereClientes"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_below="@+id/activity_custom_calendar"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/clientes"
        android:text="Clientes"
        android:scaleType="center"/>

    <Button
        android:id="@+id/gereFornecedores"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:background="@android:color/transparent"
        android:text="Fornecedores"
        android:drawableTop="@drawable/fornecedores"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/gereClientes"
        android:layout_marginRight="25sp"
        android:layout_marginEnd="25sp"
        android:scaleType="center"/>
</RelativeLayout>