<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_custom_calendar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/gereCalen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/agenda"
        android:layout_marginTop="10dp"
        android:contentDescription="Agenda"/>

    <TextView
        android:id="@+id/gereMessage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="VocÃª tem 0 compromissos hoje."
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:layout_centerHorizontal="true"
        android:background="#e84c4c"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_alignBottom="@+id/gereCalen"
        android:layout_toEndOf="@+id/gereCalen"
        android:layout_toRightOf="@+id/gereCalen"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/calendar_dateControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@android:color/holo_red_light">

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/calendarPreviousBtn"
            android:background="@drawable/right"
            android:scaleX="-1"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/calendarDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:text="Data Atual"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_weight="3"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/calendarNextBtn"
            android:background="@drawable/right"
            android:layout_margin="10dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Dom"
            android:background="@android:color/holo_orange_light"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Seg"
            android:background="@android:color/holo_orange_dark"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ter"
            android:background="@android:color/holo_orange_dark"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Qua"
            android:background="@android:color/holo_orange_dark"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Qui"
            android:background="@android:color/holo_orange_dark"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sex"
            android:background="@android:color/holo_orange_dark"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sab"
            android:background="@android:color/holo_orange_light"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textStyle="bold"/>


    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calendarGrid"
        android:numColumns="7"/>

</LinearLayout>