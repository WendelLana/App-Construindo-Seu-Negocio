<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EBE8">

    <TextView
        android:id="@+id/layEmpresarial_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/layEmpresarial_title"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#E84C4C"
        android:layout_marginTop="35dp"
        android:justificationMode="inter_word"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layEmpresarial_title"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/layEmpresarial_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/layEmpresarial_text"
            android:textColor="#1E1E24"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"/>
    </ScrollView>
</RelativeLayout>