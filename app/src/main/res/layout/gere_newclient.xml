<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/CPFCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1E1E24"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtNomeCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Cliente:"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#1E1E24"/>

    <EditText
        android:id="@+id/edNomeCli"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:background="@drawable/round_bg"
        android:textColor="#000"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"/>

    <TextView
        android:id="@+id/txtTelCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone do Cliente:"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#1E1E24"/>

    <EditText
        android:id="@+id/edTelCli"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:inputType="phone"
        android:maxLength="12"
        android:background="@drawable/round_bg"
        android:textColor="#000"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"/>

    <TextView
        android:id="@+id/txtCpfCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF (sem pontuação):"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#1E1E24"/>

    <EditText
        android:id="@+id/edCpfCli"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:inputType="number"
        android:maxLength="11"
        android:background="@drawable/round_bg"
        android:textColor="#000"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"/>

    <TextView
        android:id="@+id/txtDescCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Observações:"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#1E1E24"/>

    <EditText
        android:id="@+id/edDescCli"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:inputType="textMultiLine"
        android:background="@drawable/round_bg"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"/>

    <Button
        android:id="@+id/saveCli"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Salvar"
        android:drawableLeft="@drawable/add"
        android:drawableStart="@drawable/add"
        android:layout_gravity="center"
        android:scaleType="center"
        android:textColor="#1E1E24"
        android:layout_marginTop="20dp"/>

    <Button
    android:id="@+id/deleteCli"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:text="Deletar"
    android:drawableLeft="@drawable/eraser"
    android:drawableStart="@drawable/eraser"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:scaleType="center"
    android:textColor="#1E1E24"
    android:visibility="invisible"
    android:layout_marginBottom="20dp"/>
</LinearLayout>