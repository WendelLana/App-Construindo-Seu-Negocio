<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7ebe8">
    <TextView
        android:id="@+id/strategy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strategy_title"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#E84C4C"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        android:layout_marginTop="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/strategy_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1E1E24"
                android:textSize="16sp"
                android:text="@string/strategy_text"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc"
                android:contentDescription="abecedário"/>

            <TextView
                android:id="@+id/strategy_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1E1E24"
                android:textSize="16sp"
                android:text="@string/strategy_text2"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/colors"
                android:contentDescription="paleta de cores"/>

            <TextView
                android:id="@+id/strategy_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1E1E24"
                android:textSize="16sp"
                android:text="@string/strategy_text3"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/people"
                android:contentDescription="usuários e clientes"/>

            <TextView
                android:id="@+id/strategy_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1E1E24"
                android:textSize="16sp"
                android:text="@string/strategy_text4"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>