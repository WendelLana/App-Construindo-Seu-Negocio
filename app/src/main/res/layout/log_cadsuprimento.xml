<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCD6DD">

    <TextView
        android:id="@+id/cadsupri_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadeia de Suprimentos"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#E84c4c"
        android:layout_marginTop="35dp"
        android:justificationMode="inter_word"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cadsupri_title"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/cadsupri_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CadSuprimento_text"
            android:textColor="#1e1e24"
            android:textSize="16sp"/>
    </ScrollView>

</RelativeLayout>