<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7ebe8">

    <TextView
        android:id="@+id/RGFunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1E1E24"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtNomeFunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Funcionário:"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#1E1E24"/>

    <EditText
        android:id="@+id/edNomeFunc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:background="@drawable/round_bg"
        android:textColor="#000"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"/>

    <TextView
        android:id="@+id/txtRGFunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RG (sem pontuação):"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#1E1E24"/>

    <EditText
        android:id="@+id/edRGFunc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:background="@drawable/round_bg"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humaDatas"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp">

    <TextView
        android:id="@+id/txtNascFunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Dt. Nasc.:"
        android:textColor="#1E1E24"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/txtContratoFunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dt. Contração:"
        android:textColor="#1E1E24"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/txtNascFunc"/>

        <LinearLayout
            android:layout_below="@+id/txtContratoFunc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edNascFunc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_bg"
                android:ems="10"
                android:inputType="date"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"/>

            <EditText
                android:id="@+id/edContratoFunc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_bg"
                android:ems="10"
                android:inputType="date"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtCargoFunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Função do Funcionário:"
        android:textColor="#1E1E24"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edCargoFunc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_bg"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"/>

    <TextView
        android:id="@+id/txtSalarFunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Salário do Funcionário:"
        android:textColor="#1E1E24"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edSalarFunc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_bg"
        android:inputType="numberDecimal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"/>

    <TextView
        android:id="@+id/txtDescFunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Observações:"
        android:textColor="#1E1E24"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edDescFunc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignLeft="@id/txtNomeFunc"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_bg"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="5dp"/>


    <Button
        android:id="@+id/saveFunc"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Salvar"
        android:drawableLeft="@drawable/add"
        android:drawableStart="@drawable/add"
        android:layout_gravity="center"
        android:scaleType="center"
        android:textColor="#1E1E24"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/deleteFunc"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Deletar"
        android:drawableLeft="@drawable/eraser"
        android:drawableStart="@drawable/eraser"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:scaleType="center"
        android:textColor="#1E1E24"
        android:visibility="invisible"
        android:layout_marginBottom="20dp"/>

</LinearLayout>